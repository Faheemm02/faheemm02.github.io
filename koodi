	<h3>Viopeen esimerkki</h3>

	<form>
		<label>Hinta:</label> 
		<input type="text" id="hinta" size="5"> 
		<input type="button" id="painike" value="Laske alv ero" onclick="laskeEro()">
	</form>

	<p id="vastaus"></p>
	
	<script>
        function laskeEro() {
            hinta = document.getElementById("hinta").value 
            alverotus24 = hinta*0.24
            alverotus10 = hinta*0.1
            alverotus = alv24 - alv10
            document.getElementById("vastaus"). innerHTML = "erotus on: " + alverotus + "euroa"

        }
    </script> 


